// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// NextAuth.js 用户模型（扩展）
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  
  // 扩展字段
  username      String?   @unique  // 用于公开链接 /u/username
  bio           String?   @db.Text // 个人简介
  headline      String?            // 一句话介绍
  
  // 管理员控制字段
  bannedAt      DateTime? @map("banned_at")       // 被禁用时间
  banReason     String?   @map("ban_reason")      // 禁用原因
  profileHidden Boolean   @default(false) @map("profile_hidden") // 个人资料是否被隐藏
  
  // 测试账号字段
  isTestAccount Boolean   @default(false) @map("is_test_account") // 是否测试账号
  testLoginCode String?   @unique @map("test_login_code")         // 测试登录码
  
  // 管理者权限
  isAdmin       Boolean   @default(false) @map("is_admin")        // 是否管理者（由开发者分配）
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  categories    Category[]
  siteConfig    SiteConfig?
  apiTokens     ApiToken[]
  
  // 关注关系
  followers     Follow[]  @relation("Following")  // 我的粉丝
  following     Follow[]  @relation("Followers")  // 我关注的人

  // 阅读书架
  books             Book[]
  readingProgress   ReadingProgress[]
  bookmarks         Bookmark[]
  highlights        Highlight[]
  readingSettings   ReadingSettings?

  @@map("users")
}

// 关注关系模型
model Follow {
  id          String   @id @default(uuid())
  followerId  String   @map("follower_id")   // 关注者
  followingId String   @map("following_id")  // 被关注者
  createdAt   DateTime @default(now()) @map("created_at")
  
  follower    User     @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

// 用户站点配置
model SiteConfig {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  
  // 站点基本信息
  siteName    String?  @map("site_name")     // 站点名称
  siteTagline String?  @map("site_tagline")  // 站点标语
  
  // 主题配置
  primaryColor String? @map("primary_color") // 主题色
  
  // 社交链接
  githubUrl   String?  @map("github_url")
  twitterUrl  String?  @map("twitter_url")
  linkedinUrl String?  @map("linkedin_url")
  websiteUrl  String?  @map("website_url")
  
  // 阿里云 OSS 图床配置
  ossRegion          String?  @map("oss_region")            // 如 oss-cn-hangzhou
  ossBucket          String?  @map("oss_bucket")            // Bucket 名称
  ossAccessKeyId     String?  @map("oss_access_key_id")     // AccessKey ID
  ossAccessKeySecret String?  @map("oss_access_key_secret") // AccessKey Secret
  ossDir             String?  @map("oss_dir")               // 存储目录，如 blog/images/
  ossDomain          String?  @map("oss_domain")            // 自定义域名（可选）
  
  // 存储方式配置
  storageType        String?  @map("storage_type")          // oss | local
  localStoragePath   String?  @map("local_storage_path")    // 本地存储路径（相对 public）
  
  // 默认图床使用统计
  defaultOssUsedBytes  BigInt   @default(0) @map("default_oss_used_bytes")  // 已使用字节数
  defaultOssUsedCount  Int      @default(0) @map("default_oss_used_count")  // 已上传图片数
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("site_configs")
}

// 分类模型（支持树形结构，关联用户）
model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String
  icon      String?  // 可选的图标（emoji 或图标名）
  color     String?  // 可选的颜色
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // 用户关联
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 树形结构
  parentId  String?   @map("parent_id")
  parent    Category? @relation("CategoryTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  Category[] @relation("CategoryTree")
  
  posts     Post[]

  @@unique([userId, slug])  // 同一用户下 slug 唯一
  @@index([userId])
  @@index([parentId])
  @@map("categories")
}

// 文章模型（关联用户）
model Post {
  id         String    @id @default(uuid())
  slug       String
  title      String
  content    String    @db.Text
  excerpt    String?
  coverImage String?   @map("cover_image")
  tags       String[]  @default([])
  published  Boolean   @default(false)
  sortOrder  Int       @default(0) @map("sort_order")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  
  // 管理员控制字段
  bannedAt       DateTime? @map("banned_at")        // 被禁用时间（对外不可见，作者可见）
  banReason      String?   @map("ban_reason")       // 禁用原因
  deletedByAdmin Boolean   @default(false) @map("deleted_by_admin") // 被管理员删除
  adminDeletedAt DateTime? @map("admin_deleted_at") // 管理员删除时间
  adminNote      String?   @map("admin_note")       // 管理员备注
  
  // 用户关联
  userId     String    @map("user_id")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 分类关联
  categoryId String?   @map("category_id")
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@unique([userId, slug])  // 同一用户下 slug 唯一
  @@index([userId])
  @@index([categoryId])
  @@index([published])
  @@index([title])
  @@map("posts")
}

// OAuth 账户关联
model Account {
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

// 用户会话
model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// API Token（用于外部服务认证）
model ApiToken {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  name        String                          // Token 名称，如 "GitHub Actions"
  token       String    @unique               // Token 值（哈希存储）
  tokenPrefix String    @map("token_prefix")  // Token 前缀（用于显示，如 "ink_xxxxx"）
  lastUsedAt  DateTime? @map("last_used_at")  // 最后使用时间
  expiresAt   DateTime? @map("expires_at")    // 过期时间（可选）
  createdAt   DateTime  @default(now()) @map("created_at")
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("api_tokens")
}

// ==========================================
// 阅读书架模块
// ==========================================

// 书籍
model Book {
  id            String    @id @default(cuid())
  title         String
  author        String?
  cover         String?                // 封面图 URL
  description   String?   @db.Text
  format        String                 // epub, pdf, txt, mobi, azw3, docx, md, html
  originalUrl   String    @map("original_url")   // 原始文件 OSS URL
  readableUrl   String?   @map("readable_url")   // 转换后可读文件 URL（MOBI->EPUB 等）
  fileSize      Int       @map("file_size")      // 文件大小（字节）
  metadata      Json?                  // 出版社、ISBN 等附加信息
  
  // 解析后的 EPUB 内容元数据
  totalChapters   Int?      @map("total_chapters")    // 总章节数
  totalCharacters Int?      @map("total_characters")  // 全书纯文本总字符数
  epubStyles      String?   @db.Text @map("epub_styles") // 合并后的 CSS 样式
  parsedAt        DateTime? @map("parsed_at")          // EPUB 解析完成时间
  
  userId        String    @map("user_id")
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  progress      ReadingProgress[]
  bookmarks     Bookmark[]
  highlights    Highlight[]
  chapters      BookChapter[]

  @@index([userId])
  @@map("books")
}

// EPUB 章节内容（服务端解析后存储，前端按需加载）
model BookChapter {
  id            String   @id @default(cuid())
  bookId        String   @map("book_id")
  book          Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  chapterIndex  Int      @map("chapter_index")  // 0-based 章节序号
  href          String   @default("")            // EPUB 原始 href
  html          String   @db.Text                // 章节 HTML 内容（图片 URL 已替换为 OSS）
  charOffset    Int      @default(0) @map("char_offset")   // 该章节在全书中的字符起始偏移
  charLength    Int      @default(0) @map("char_length")   // 该章节纯文本字符数
  
  createdAt     DateTime @default(now()) @map("created_at")

  @@unique([bookId, chapterIndex])
  @@index([bookId])
  @@map("book_chapters")
}

// 阅读进度
model ReadingProgress {
  id              String   @id @default(cuid())
  bookId          String   @map("book_id")
  book            Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  userId          String   @map("user_id")
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  currentLocation String?  @map("current_location") // EPUB CFI / PDF pageNumber / 文本 scrollPercentage
  percentage      Float    @default(0)               // 0-100
  lastReadAt      DateTime @default(now()) @map("last_read_at")
  totalReadTime   Int      @default(0) @map("total_read_time") // 累计阅读秒数
  
  // 页码定位（EPUB 专用）
  pageNumber          Int?    @map("page_number")          // 上次阅读的页码
  settingsFingerprint String? @map("settings_fingerprint") // 页码对应的设置指纹（fontSize_lineHeight_fontFamily_pageWidth_pageHeight）
  
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  @@unique([userId, bookId])
  @@index([bookId])
  @@map("reading_progress")
}

// 书签
model Bookmark {
  id        String   @id @default(cuid())
  bookId    String   @map("book_id")
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  title     String?
  location  String               // 格式特定定位信息
  note      String?  @db.Text
  
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, bookId])
  @@map("bookmarks")
}

// 划线笔记
model Highlight {
  id        String   @id @default(cuid())
  bookId    String   @map("book_id")
  book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  text      String   @db.Text         // 划线文本
  location  String                     // 格式特定定位信息
  color     String   @default("yellow") // yellow, green, blue, pink, purple
  note      String?  @db.Text         // 注释
  
  createdAt DateTime @default(now()) @map("created_at")

  @@index([userId, bookId])
  @@map("highlights")
}

// 阅读偏好设置
model ReadingSettings {
  id         String   @id @default(cuid())
  userId     String   @unique @map("user_id")
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  fontSize   Int      @default(16)  @map("font_size")
  fontFamily String   @default("system") @map("font_family")
  lineHeight Float    @default(1.8) @map("line_height")
  theme      String   @default("light")  // light, dark, sepia
  pageWidth  Int      @default(800) @map("page_width")
  
  updatedAt  DateTime @updatedAt @map("updated_at")

  @@map("reading_settings")
}
