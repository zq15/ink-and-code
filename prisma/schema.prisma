// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

// NextAuth.js 用户模型（扩展）
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  
  // 扩展字段
  username      String?   @unique  // 用于公开链接 /u/username
  bio           String?   @db.Text // 个人简介
  headline      String?            // 一句话介绍
  
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  accounts      Account[]
  sessions      Session[]
  posts         Post[]
  categories    Category[]
  siteConfig    SiteConfig?
  apiTokens     ApiToken[]
  
  // 关注关系
  followers     Follow[]  @relation("Following")  // 我的粉丝
  following     Follow[]  @relation("Followers")  // 我关注的人

  @@map("users")
}

// 关注关系模型
model Follow {
  id          String   @id @default(uuid())
  followerId  String   @map("follower_id")   // 关注者
  followingId String   @map("following_id")  // 被关注者
  createdAt   DateTime @default(now()) @map("created_at")
  
  follower    User     @relation("Followers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User     @relation("Following", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
  @@map("follows")
}

// 用户站点配置
model SiteConfig {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  
  // 站点基本信息
  siteName    String?  @map("site_name")     // 站点名称
  siteTagline String?  @map("site_tagline")  // 站点标语
  
  // 主题配置
  primaryColor String? @map("primary_color") // 主题色
  
  // 社交链接
  githubUrl   String?  @map("github_url")
  twitterUrl  String?  @map("twitter_url")
  linkedinUrl String?  @map("linkedin_url")
  websiteUrl  String?  @map("website_url")
  
  // 阿里云 OSS 图床配置
  ossRegion          String?  @map("oss_region")            // 如 oss-cn-hangzhou
  ossBucket          String?  @map("oss_bucket")            // Bucket 名称
  ossAccessKeyId     String?  @map("oss_access_key_id")     // AccessKey ID
  ossAccessKeySecret String?  @map("oss_access_key_secret") // AccessKey Secret
  ossDir             String?  @map("oss_dir")               // 存储目录，如 blog/images/
  ossDomain          String?  @map("oss_domain")            // 自定义域名（可选）
  
  // 默认图床使用统计
  defaultOssUsedBytes  BigInt   @default(0) @map("default_oss_used_bytes")  // 已使用字节数
  defaultOssUsedCount  Int      @default(0) @map("default_oss_used_count")  // 已上传图片数
  
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("site_configs")
}

// 分类模型（支持树形结构，关联用户）
model Category {
  id        String   @id @default(uuid())
  name      String
  slug      String
  icon      String?  // 可选的图标（emoji 或图标名）
  color     String?  // 可选的颜色
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  
  // 用户关联
  userId    String   @map("user_id")
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 树形结构
  parentId  String?   @map("parent_id")
  parent    Category? @relation("CategoryTree", fields: [parentId], references: [id], onDelete: SetNull)
  children  Category[] @relation("CategoryTree")
  
  posts     Post[]

  @@unique([userId, slug])  // 同一用户下 slug 唯一
  @@index([userId])
  @@index([parentId])
  @@map("categories")
}

// 文章模型（关联用户）
model Post {
  id         String    @id @default(uuid())
  slug       String
  title      String
  content    String    @db.Text
  excerpt    String?
  coverImage String?   @map("cover_image")
  tags       String[]  @default([])
  published  Boolean   @default(false)
  sortOrder  Int       @default(0) @map("sort_order")
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  
  // 用户关联
  userId     String    @map("user_id")
  user       User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // 分类关联
  categoryId String?   @map("category_id")
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  @@unique([userId, slug])  // 同一用户下 slug 唯一
  @@index([userId])
  @@index([categoryId])
  @@index([published])
  @@index([title])
  @@map("posts")
}

// OAuth 账户关联
model Account {
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
  @@map("accounts")
}

// 用户会话
model Session {
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// API Token（用于外部服务认证）
model ApiToken {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  name        String                          // Token 名称，如 "GitHub Actions"
  token       String    @unique               // Token 值（哈希存储）
  tokenPrefix String    @map("token_prefix")  // Token 前缀（用于显示，如 "ink_xxxxx"）
  lastUsedAt  DateTime? @map("last_used_at")  // 最后使用时间
  expiresAt   DateTime? @map("expires_at")    // 过期时间（可选）
  createdAt   DateTime  @default(now()) @map("created_at")
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("api_tokens")
}
